callee:
{
	// @ should reference the caller, the same way ./ references this.
	print @name
	print(./caller name)
	print(this caller name)
}

caller:
{
	callee
}

// Should print "caller" three times.
caller

nested:
(
	callee:
	{
		print @name
	}
)

also_caller:
{
	nested callee
}

// Should print "also_caller"
also_caller